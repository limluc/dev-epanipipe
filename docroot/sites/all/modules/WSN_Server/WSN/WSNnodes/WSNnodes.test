class WSNnodesTestCase extends DrupalWebTestCase {

  /**
   * Provides metadata about this group of test cases.
   */
  public static function getInfo() {
    return array(
      'name' => t('WSN Node Functionality'),
      'description' => t('Test the functionality of the WSN Node module'),
      'group' => 'WSN',
    );
  }

  /**
   * Standard configuration for all test cases.
   */
  public function setUp() {
    parent::setUp('views', 'WSN', 'WSNsites', 'WSNnodes');
  }

  /**
   * Test case covering access of node list.
   */
  public function testWSNnodesAccess() {
    $this->drupalGet('WSN/nodes');
    $this->assertResponse(403, t('Make sure access is denied to WSN Nodes list for anonymous user'));

    $basic_user = $this->drupalCreateUser();
    $this->drupalLogin($basic_user);
    $this->drupalGet('WSN/nodes');
    $this->assertResponse(403, t('Make sure access is denied to WSN Nodes list for basic user'));

    $privileged_user = $this->drupalCreateUser(array('WSN Node: access'));
    $this->drupalLogin($privileged_user);
    $this->drupalGet('WSN/nodes');
    $this->assertText(t('nodes'), t('Make sure the correct page has been displayed by checking that the title is "Nodes".'));
  }

