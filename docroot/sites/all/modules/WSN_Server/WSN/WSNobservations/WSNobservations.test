  /**
   * Test of access controls on Observations lists.
   */
  public function testWSNobservationsAccess() {
    $this->drupalGet('WSN/Observations');
    $this->assertResponse(403, t('Make sure access is denied to WSN Observations list for anonymous user'));

    $basic_user = $this->drupalCreateUser();
    $this->drupalLogin($basic_user);
    $this->drupalGet('WSN/Observations');
    $this->assertResponse(403, t('Make sure access is denied to WSN Observations list for basic user'));

    $privileged_user = $this->drupalCreateUser(array('WSN Observations: access'));
    $this->drupalLogin($privileged_user);
    $this->drupalGet('WSN/Observations');
    $this->assertText(t('Observations'), t('Make sure the correct page has been displayed by checking that the title is "Observations".'));
  }

